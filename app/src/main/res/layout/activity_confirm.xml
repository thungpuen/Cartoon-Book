<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nsru.noknoi.puwanat.cartoonbook.ConfirmActivity"
    android:background="@drawable/wall16">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#50ffffff"
        android:padding="15dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/linThird">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Add More ..."
                android:id="@+id/button6"
                android:layout_weight="1"
                android:onClick="clickAddMore" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Confirm Order"
                android:id="@+id/button7"
                android:layout_weight="1"
                android:onClick="clickOrder" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Order"
            android:id="@+id/textView15"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/h1"
            android:textStyle="bold"
            android:textColor="@color/text" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView15"
            android:id="@+id/linFirst">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:id="@+id/textView16"
                    android:textSize="@dimen/h2"
                    android:layout_weight="1"
                    android:textColor="@color/text" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Surname"
                    android:id="@+id/textView17"
                    android:textSize="@dimen/h2"
                    android:layout_weight="1.2"
                    android:textColor="@color/text" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Money"
                    android:id="@+id/textView18"
                    android:textSize="@dimen/h2"
                    android:layout_weight="1"
                    android:textColor="@color/text" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:id="@+id/textView19"
                    android:textSize="@dimen/h2"
                    android:layout_weight="1"
                    android:textColor="@color/text" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/textView20"
                    android:textSize="@dimen/h2"
                    android:layout_weight="1"
                    android:textColor="@color/text" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/textView21"
                    android:textSize="@dimen/h2"
                    android:layout_weight="1"
                    android:textColor="@color/text" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/textView22"
                    android:textSize="@dimen/h2"
                    android:layout_weight="1"
                    android:textColor="@color/text" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/textView23"
                    android:textSize="@dimen/h2"
                    android:layout_weight="1.2"
                    android:textColor="@color/text" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linFirst"
            android:layout_marginTop="20dp"
            android:id="@+id/linSecond">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Product"
                android:id="@+id/textView24"
                android:textSize="@dimen/h2"
                android:layout_weight="1.5"
                android:textStyle="bold"
                android:textColor="@color/text" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Price"
                android:id="@+id/textView25"
                android:textSize="@dimen/h2"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/text" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:id="@+id/textView26"
                android:textSize="@dimen/h2"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/text" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Total"
                android:id="@+id/textView27"
                android:textSize="@dimen/h2"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/text" />
        </LinearLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView2"
            android:layout_below="@+id/linSecond"
            android:layout_above="@+id/textView28" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView28"
            android:textSize="@dimen/h1"
            android:layout_above="@+id/linThird"
            android:layout_alignParentRight="true"
            android:textColor="@color/text" />
    </RelativeLayout>
</RelativeLayout>
